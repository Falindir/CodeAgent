<div class="row">

  <div class="row">

    <div id="registerbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <div class="panel panel-info" >
        <div class="panel-heading">
          <div class="panel-title"><h3>Register</h3></div>
        </div>

        <div style="padding-top:30px" class="panel-body" >

          <form action="/register" method="post" id="registerform" class="form-horizontal" role="form">

            <div style="margin-bottom: 25px" class="form-group">
              <label for="register-username" class="col-sm-2 control-label">Name</label>
              <div class="col-sm-10">
                <input id="register-username" type="text" class="form-control input-lg" name="name" value="" placeholder="name" autofocus required>
              </div>
            </div>

            <div style="margin-bottom: 25px" class="form-group">
              <label for="register-useremail" class="col-sm-2 control-label">Email</label>
              <div class="col-sm-10">
                <input id="register-useremail" type="email" class="form-control input-lg" name="email" value="" placeholder="email" autofocus required>
              </div>
            </div>

            <div style="margin-bottom: 25px" class="form-group">
              <label for="register-password" class="col-sm-2 control-label">Password</label>
              <div class="col-sm-10">
                <input id="register-password" type="password" class="form-control input-lg" name="password" placeholder="password" required>
              </div>
            </div>

            <div style="margin-top:10px" class="form-group">
              <div style="text-align:center"class="col-sm-12 controls">
                <button id="btn-register"type="submit" class="btn btn-lg btn-primary">Send </button>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12 control">
                <div style="border-top: 1px solid#888; padding-top:15px;" >
                  If you have an account?
                  <a href="/login" >
                    here
                  </a>
                </div>
              </div>
            </div>
          </form>



        </div>
      </div>
    </div>

  </div>


</div>
